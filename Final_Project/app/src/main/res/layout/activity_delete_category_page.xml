<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Delete_Category_Page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="35dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/cat_drop"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="15dp"
            android:layout_weight=".1"
            android:contentDescription="CatList"
            android:entries="@array/catList" />

        <ListView
            android:id="@+id/cat_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8" />

        <Button
            android:id="@+id/delete_all_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight=".1"
            android:text="DELETE ALL CATEGORY" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>